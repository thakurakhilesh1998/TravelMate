<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment.mytripFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMytrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/notriplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/notrip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="No trip Planned!"
            android:textColor="@color/black"
            android:textSize="34dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="When you have trip.You will see details here"
            android:textAlignment="center"
            android:textColor="@color/mdtp_dark_gray"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btncreatetrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttontrip"
            android:paddingHorizontal="28dp"
            android:text="Plan Trip"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </LinearLayout>
</LinearLayout>